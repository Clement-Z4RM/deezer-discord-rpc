{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "build/",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/*", "src/activity/*"],
  "exclude": ["node_modules/*"]
}
