{
  "name": "deezer-discord-rpc",
  "version": "1.0.0",
  "description": "A Discord RPC for Deezer",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "electron-forge start",
    "build": "tsc --resolveJsonModule",
    "run": "yarn build && yarn start",
    "icon": "png-to-ico src/img/icon.png > src/img/icon.ico",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bootstrap": "^5.1.3",
    "discord-rpc": "^4.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "ms": "^2.1.3",
    "png-to-ico": "^2.1.4",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@types/discord-rpc": "^4.0.0",
    "@types/node": "^17.0.8",
    "electron": "19.0.9",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0"
  },
  "repository": "https://github.com/NetherMCtv/deezer-discord-rpc.git",
  "author": "NetherMC",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "deezer_discord_rpc"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
